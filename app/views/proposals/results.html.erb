<% content_for :background_image do %>
  background-image: linear-gradient(to right bottom, #f9e5ae, #fbeabd, #fcf0cd, #fef5dc, #fffaec);
<% end %>

<div class="container">
  <div class="results">
    <h2>☀️</h2>

    <h3>
      It's <strong><%= @season %></strong>, temperature will be <strong><%= @meteo.temperature %>°C</strong>
    </h3>

    <h3 class="text-center mb">
      Here is what you could wear to <strong><%= @usage %></strong>
    </h3>

    <div class="row">
      <% @proposals.each_with_index do |proposal, index| %>
        <div class="col-xs-6">
          <div class="outfit">
            <% proposal.articles.each do |article| %>
              <div class="background"
                   style="background-image: radial-gradient(closest-side, <%= article.color.hex %>, <%= article.color.hex %>, <%= article.color.hex %>, <%= article.color.hex %>, <%= article.color.hex %>, <%= article.color.hex %>, white);">
                <%= image_tag article.image, alt: "Article", height: 250, width: 167 %>
                 <div class="card-info">
                  <div class="infos">
                    <p><%= article.wearable.kind.capitalize %></p>
                    <p><%= article.color.name.capitalize %></p>
                  </div>
                </div>
              </div>
            <% end %>
          </div>
          <br>
        </div>
      <% end %>
    </div>
  </div>
</div>
