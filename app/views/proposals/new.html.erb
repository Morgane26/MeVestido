<% content_for :background_image do %>
  background-image: linear-gradient(to right bottom, #f9e5ae, #fbeabd, #fcf0cd, #fef5dc, #fffaec);
<% end %>

  <div class="container">
    <h1 class="h2 mt++ pt mb+ text-center text-bold">
      What are you up to?
    </h1>

    <div class="proposal-wrap">
      <div class="row">
        <div class="col-xs-6 col-sm-4">
          <div class="text-center">
       <!--      <div class="proposals-title mb+ mt"> WORK 👩‍💻</div> -->
            <%= button_to "Work",
                  { controller: "proposals", action: "results", usage: "work" },
                  method: :post,
                  class: "card proposal-card-work mb+" %>
          </div>
        </div>
        <div class="col-xs-6 col-sm-4">
          <div class="text-center">
            <!-- <div class="proposals-title mb+ mt"> CHILL 🦄</div> -->
            <%= button_to "Chill",
                  { controller: "proposals", action: "results", usage: "chill" },
                  method: :post,
                  class: "card proposal-card-chill mb+" %>
          </div>
        </div>
        <div class="col-xs-6 col-sm-4">
          <div class="text-center">
            <!-- <div class="proposals-title mb+ mt"> GOING OUT ✨</div> -->
            <%= button_to "Going out",
                  { controller: "proposals", action: "results", usage: "night" },
                  method: :post,
                  class: "card proposal-card-night mb+" %>
          </div>
        </div>
        <div class="col-xs-6 col-sm-4">
          <div class="text-center">
            <!-- <div class="proposals-title mb+ mt"> SPORT 👟</div> -->
            <%= button_to "Sport",
                  { controller: "proposals", action: "results", usage: "sport" },
                  method: :post,
                  class: "card proposal-card-sport mb+" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>



