
<div class="background2" style="background-image: url('<%= image_path("background_p2.jpg") %>')">

  <h1>Create Your dressing</h1>
  <div class="container">
    <div class="row">
      <div class="col-xs-12 col-sm-6 col-md-4 col-lg-3">
        <%= simple_form_for(@article) do |f| %>
        <div class="card">
          <div class = "input-new-article">
            <%= f.input :wearable_type,
                  collection: @wearable_types,
                  prompt: "Select wearable type" %>
          </div>
        </div>
        <div class="card" id="">
          <div class = "input-new-article">
            <%= f.association :wearable,
                collection: @wearables,
                prompt: "Select wearable" %>
          </div>
        </div>
      </div>
    </div>
    <div class="container">
      <div class="row" id="wearable_image_create_dressing">
        <div class="col-xs-12 col-sm-6 col-md-4 col-log-3">
            <div class="div-article-new">
              <%= image_tag "chemise_croctop_test.png",
                  alt: "Chemise",
                  :class => "img-article" %>
            </div>
          </div>
        </div>
      </div>

    <div class="row" id="wearable_option_create_dressing">
      <div class="col-xs-12 col-sm-6 col-md-4 col-log-3">
        <div class = "input-new-article">
          <%= f.input :season,
              collection: Article.seasons.keys,
              prompt: "Select a season" %>
        </div>

        <div class = "input-new-article">
          <%= f.association :color,
              prompt: "Select a color" %>
        </div>

        <div class = "input-new-article">
          <%= f.input :usage,
              collection: Article.usages.keys,
              prompt: "Select usage" %>
        </div>
      </div>
    </div>
      <div class="row" id="wearable_option_create_dressing">
        <div class="col-xs-12 col-sm-6 col-md-4 col-log-3>
          <div class= "submit-edit">
            <%= f.button :submit %>
          </div>
        <% end %>
      <br>
      </div>
    </div>

      <div>
        <%= link_to articles_path :class => "btn-success" %>
        <!-- mettre un link_to -->
      </div>
    </div>
  </div>
</div>
</div>
