<div
  class="background2"
  style="background-image: url('<%= image_path("background_p2.jpg") %>')">

  <div class="container">
    <h1>All of your clothes are here ðŸ‘— </h1>
    <div class="row">
      <% @article.each do |article| %>
        <div class="col-xs-6">
          <div class="card-article-dressing">
            <div class="card-image"
                 style="background-color: <%= article.color.hex %>">
              <%= image_tag article.image,
                    alt: "Article",
                    width: 180,
                    height: 280 %>
              <div class="card-info">
                <div class="infos">
                  <p><%= article.season.capitalize %></p>
